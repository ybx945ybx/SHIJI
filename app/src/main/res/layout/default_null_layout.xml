<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlyt_default_null_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/tv_default_null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:drawablePadding="8dp"
        android:drawableTop="@mipmap/zanwujifen"
        android:gravity="center"
        android:paddingBottom="30dp"
        android:text="还没有积分"
        android:textColor="@color/person_center_gray"
        android:textSize="13sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/llyt_off_net"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_net_off"
            android:drawablePadding="7dp"
            android:drawableTop="@mipmap/zanwuwangluo"
            android:gravity="center"
            android:text="您的网络异常"
            android:textColor="@color/person_center_gray"
            android:textSize="13sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_webview_defeat"
            android:gravity="center"
            android:text="网络加载失败"
            android:textColor="@color/person_center_gray"
            android:textSize="13sp"
            android:textStyle="bold"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_reload"
            android:layout_width="134dp"
            android:layout_height="39dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="18dp"
            android:background="@drawable/reload_bg_selector"
            android:gravity="center"
            android:text="重新加载"
            android:textColor="#0c0c0c"
            android:textSize="12sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_shopping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_default_null"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_black_stroke_white_solid"
        android:paddingLeft="36dp"
        android:paddingRight="36dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="去逛逛"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="gone" />
</RelativeLayout>
