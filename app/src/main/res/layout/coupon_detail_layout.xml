<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mine_white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        layout="@layout/mine_title_layout_white_bg" />
    <View
        android:layout_height="0.1dp"
        android:layout_width="match_parent"
        android:background="@color/mine_background"/>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mine_white"
        android:visibility="visible">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/mine_white"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_coupon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/twenty_dp"
                    android:gravity="center_horizontal"
                    android:text=""
                    android:textColor="@color/filter_text_black"
                    android:singleLine="true"
                    android:textSize="@dimen/fouteen_sp" />

                <TextView
                    android:id="@+id/tv_button"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/thirty_eight_dp"
                    android:layout_marginLeft="@dimen/thirty_five_dp"
                    android:layout_marginRight="@dimen/thirty_five_dp"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:background="@drawable/coupon_detail_selector"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="领取优惠券"
                    android:textColor="@color/mine_white"
                    android:textSize="@dimen/thirteen_sp" />

                <TextView
                    android:id="@+id/tv_range"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/sixteen_dp"
                    android:layout_marginTop="@dimen/thirty_seven_dp"
                    android:text="适用范围: "
                    android:textColor="@color/filter_text_black"
                    android:textSize="@dimen/fouteen_sp" />

                <TextView
                    android:id="@+id/tv_deadline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/sixteen_dp"
                    android:layout_marginTop="@dimen/twenty_dp"
                    android:text=""
                    android:textColor="@color/filter_text_black"
                    android:textSize="@dimen/fouteen_sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/sixteen_dp"
                    android:layout_marginTop="@dimen/twenty_dp"
                    android:text="使用场景"
                    android:textColor="@color/filter_text_black"
                    android:textSize="@dimen/fouteen_sp" />

                <TextView
                    android:id="@+id/tv_scene"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/sixteen_dp"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:text=""
                    android:textColor="@color/publish_text_cancle"
                    android:textSize="@dimen/twelve_sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/sixteen_dp"
                    android:layout_marginTop="@dimen/twenty_dp"
                    android:text="使用方法"
                    android:textColor="@color/filter_text_black"
                    android:textSize="@dimen/fouteen_sp" />

                <TextView
                    android:id="@+id/tv_mothed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/seven_dp"
                    android:layout_marginLeft="@dimen/sixteen_dp"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:singleLine="false"
                    android:text=""
                    android:textColor="@color/publish_text_cancle"
                    android:textSize="@dimen/twelve_sp" />
                <TextView
                    android:id="@+id/tv_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/fouty_dp"
                    android:layout_marginLeft="@dimen/sixteen_dp"
                    android:singleLine="false"
                    android:text=""
                    android:textColor="@color/publish_text_cancle"
                    android:textSize="@dimen/twelve_sp"
                    android:visibility="gone"/>
            </LinearLayout>
        </ScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>
    <include
        layout="@layout/withoutnet_layout"></include>
</LinearLayout>