<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">
 <View
     android:id="@+id/viewline_left"
     android:layout_width="1px"
     android:layout_height="wrap_content"
     android:background="@color/new_gray_color"
     android:layout_alignParentLeft="true"
     android:layout_alignTop="@+id/rl_tab_title"
     android:layout_alignBottom="@+id/rl_tab_title"/>
    <RelativeLayout
        android:id="@+id/rl_tab_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_tab_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="15sp"
            android:textColor="@color/new_black_color"
            android:text="shiji"/>
        <View
            android:id="@+id/view_tab_title"
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:background="@drawable/tab_line_selector"
            android:layout_below="@id/tv_tab_title"
            android:layout_alignLeft="@id/tv_tab_title"
            android:layout_alignRight="@id/tv_tab_title"
            android:layout_marginTop="4dp"/>
    </RelativeLayout>
    <View
        android:id="@+id/viewline_right"
        android:layout_width="1px"
        android:layout_height="wrap_content"
        android:background="@color/new_gray_color"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/rl_tab_title"
        android:layout_alignBottom="@+id/rl_tab_title"/>
</RelativeLayout>