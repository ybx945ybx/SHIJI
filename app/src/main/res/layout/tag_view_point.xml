<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/tagview_point_layout"
             android:background="#00000000"
             android:layout_width="20dp"
             android:layout_height="20dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|right">

        <ImageView
            android:id="@+id/blackIcon1"
            android:layout_width="5.3dip"
            android:layout_height="5.3dip"
            android:layout_gravity="center"
            android:src="@mipmap/brand_tag_point_black_bg"/>

        <ImageView
            android:id="@+id/blackIcon2"
            android:layout_width="5.3dip"
            android:layout_height="5.3dip"
            android:layout_gravity="center"
            android:src="@mipmap/brand_tag_point_black_bg"/>

        <ImageView
            android:id="@+id/brandIcon"
            android:layout_width="10dip"
            android:layout_height="10dip"
            android:layout_gravity="center"
            android:src="@mipmap/brand_tag_point_white_bg"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/geoIcon"
            android:layout_width="10dip"
            android:layout_height="10dip"
            android:layout_gravity="center"
            android:src="@mipmap/icon_place"
            android:visibility="gone"/>
    </FrameLayout>

</FrameLayout>