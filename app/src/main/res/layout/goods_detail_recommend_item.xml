<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:visibility="gone"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="7dp"
    android:layout_marginTop="2dp"
    android:padding="1px"
    android:background="@drawable/goods_list_item_bg"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:id="@+id/llyt_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/mine_white">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/item_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/user_dafault"/>
        <TextView
            android:id="@+id/item_brand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="9dp"
            android:text=""
            android:textColor="@color/home_detail_black_txt"
            android:textSize="11sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text=""
            android:textColor="@color/home_detail_black_txt"
            android:textSize="11sp"/>

        <View
            android:layout_width="15dp"
            android:layout_height="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="#1e1e1e"/>
        <LinearLayout
            android:id="@+id/goods_price_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/item_now_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥14700"
                android:textColor="@color/app_base_red"
                android:textSize="17sp"/>
            <TextView
                android:id="@+id/item_orginal_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="￥6789"
                android:textColor="#bbbbbb"
                android:textSize="12sp"
                android:visibility="gone"/>
        </LinearLayout>
        <TextView
            android:id="@+id/goods_from_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:text=""
            android:textColor="#9b9b9b"
            android:textSize="10sp"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:layout_below="@+id/llyt_item"
        android:background="@color/mine_white"/>
    <LinearLayout
        android:id="@+id/discount_layout"
        android:layout_width="26dp"
        android:orientation="vertical"
        android:layout_marginRight="7dp"
        android:layout_alignParentRight="true"
        android:background="@mipmap/dazhe"
        android:layout_height="37dp">

        <TextView
            android:id="@+id/discount_tv"
            android:layout_width="wrap_content"
            android:textColor="#ffffff"
            android:text=""
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:textSize="10sp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:textColor="#ffffff"
            android:text="折"
            android:layout_gravity="center"
            android:textSize="8sp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/shop_image_sold_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:scaleType="centerInside"
        android:src="@mipmap/soldout"
        android:visibility="invisible"/>
</RelativeLayout>