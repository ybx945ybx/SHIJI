<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mine_item_bg"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="12dp">
    <cn.yiya.shiji.widgets.CircleImageView
        android:id="@+id/list_item_rank_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="12dp"
        android:scaleType="centerCrop"
        android:src="@drawable/user_dafault" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_item_rank_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textColor="@color/mine_text_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/list_item_rank_score"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/mine_text_color"
            android:textSize="12sp" />
    </LinearLayout>

    <Button
        android:id="@+id/list_item_rank_status"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:background="@mipmap/mine_tofollow"/>

</LinearLayout>