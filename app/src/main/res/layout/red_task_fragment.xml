                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="11sp"
                                    android:text="每月分享"
                                    android:textColor="#888888"/>
                                <TextView
                                    android:id="@+id/tv_weibo_num"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="11sp"
                                    android:text="2"
                                    android:textColor="#888888"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="11sp"
                                    android:text="次搭配到微博，每次获得"
                                    android:textColor="#888888"/>
                                <TextView
                                    android:id="@+id/tv_weibo_grow"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="11sp"
                                    android:text="2"
                                    android:textColor="#ed5137"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="11sp"
                                    android:text="个"
                                    android:textColor="#888888"/>
                            </LinearLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="11sp"
                                android:text="成长值"
                                android:textColor="#888888"/>

                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_wb_progress"
                        android:layout_width="60dp"
                        android:layout_height="26dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="还差3次"
                        android:gravity="center"/>

