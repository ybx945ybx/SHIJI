<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#cc212121"
    android:orientation="horizontal"
    android:paddingBottom="6dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="6dp" >

    <TextView
        android:id="@+id/txt_switch"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="仅剩"
        android:textColor="#ffffff"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/time_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_hour_decade"
            style="@style/CountDownTimerViewStyle" />

        <TextView
            android:id="@+id/tv_hour_unit"
            style="@style/CountDownTimerViewStyle"
            android:layout_marginLeft="1dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text=":"
            android:textColor="#ffffff"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_min_decade"
            style="@style/CountDownTimerViewStyle" />

        <TextView
            android:id="@+id/tv_min_unit"
            style="@style/CountDownTimerViewStyle"
            android:layout_marginLeft="1dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text=":"
            android:textColor="#ffffff"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_sec_decade"
            style="@style/CountDownTimerViewStyle" />

        <TextView
            android:id="@+id/tv_sec_unit"
            style="@style/CountDownTimerViewStyle"
            android:layout_marginLeft="1dp" />
    </LinearLayout>

</LinearLayout>