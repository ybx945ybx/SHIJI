<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mine_white"
    android:paddingLeft="16dp"
    android:paddingBottom="12dp"
    android:paddingTop="12dp"
    android:layout_marginBottom="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="16dp"
        android:layout_centerVertical="true"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_receive_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="王亚东"
                android:textSize="14sp"
                android:textColor="@color/person_center_black"/>
            <TextView
                android:id="@+id/tv_receive_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="13915905483"
                android:textSize="12sp"
                android:textColor="@color/person_center_black"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_identification_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/person_center_black"
            android:textSize="12sp"
            android:text="3206*********4567"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_province"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上海市"
                android:textSize="12sp"
                android:textColor="@color/person_center_gray"/>
            <TextView
                android:id="@+id/tv_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="上海市"
                android:textSize="12sp"
                android:textColor="@color/person_center_gray"/>
            <TextView
                android:id="@+id/tv_district"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="徐汇区"
                android:textSize="12sp"
                android:textColor="@color/person_center_gray"/>
        </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="76dp"
                android:layout_marginTop="10dp"
                android:id="@+id/tv_detail_address"
                android:text="x路x号x楼x房"
                android:textSize="12sp"
                android:textColor="@color/person_center_gray"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_edit"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:paddingLeft="10dp"
        android:paddingRight="16dp"
        android:layout_alignParentRight="true"
        android:src="@mipmap/bianjidizhi"/>
</RelativeLayout>
