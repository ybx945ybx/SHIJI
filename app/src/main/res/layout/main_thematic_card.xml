<?xml version="1.0" encoding="utf-8"?>
<cn.yiya.shiji.views.VerticalClipLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"> <!-- It is height of the collapsed card. It is set programmatically in that example. -->

    <RelativeLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"> <!-- It is height of the expanded (full) card. It is set programmatically in that example. -->

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/thematic_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            fresco:actualImageScaleType="fitXY" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@mipmap/main_gradient" />

        <TextView
            android:id="@+id/thematic_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="箱 包"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/thematic_image_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            fresco:actualImageScaleType="fitXY" />

        <ImageView
            android:id="@+id/thematic_image_gradient"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@mipmap/main_gradient" />

        <TextView
            android:id="@+id/thematic_image_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/main_arrow"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="4dp"
            android:text="服 饰"
            android:textColor="#ffffff"
            android:textSize="10sp"
            android:visibility="visible" />
    </RelativeLayout>
</cn.yiya.shiji.views.VerticalClipLayout>