<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mine_item_bg"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/layout_tag_details_image"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp"
        android:scaleType="fitCenter"
        android:layout_gravity="center"
        android:src="@drawable/user_dafault" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="2dp"
        android:paddingLeft="2dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/layout_tag_details_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:visibility="visible"
            android:lineSpacingMultiplier="1.2"
            android:lines="2"
            android:textColor="@color/mine_text_color"
            android:textSize="12sp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text=""/>

        <!--<TextView-->
            <!--android:id="@+id/layout_tag_details_follow"-->
            <!--style="@style/Common_Button_Blue"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center"-->
            <!--android:text="关注"-->
            <!--android:gravity="center" />-->
        <Button

            android:layout_width="50dp"
            android:layout_height="30dp"
            android:id="@+id/layout_tag_details_follow"
            android:background="@mipmap/mine_tofollow"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingRight="2dp"
        android:paddingLeft="2dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <cn.yiya.shiji.widgets.gallery.LeftGallery
            android:id="@+id/layout_tag_details_liked"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:spacing="6dp" />
        <TextView
            android:layout_width="5dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/layout_tag_details_liked_num"
            style="@style/Common_Button_Red"
            android:padding="2dp"
            android:layout_width="28dp"
            android:layout_height="25dp" />

    </LinearLayout>

</LinearLayout>
