<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mine_item_bg"
    android:orientation="vertical">

    <cn.yiya.shiji.widgets.AutoGallery
        android:id="@+id/remember_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@color/mine_item_bg"/>
    <cn.yiya.shiji.widgets.gallery.LeftGallery
        android:id="@+id/remember_tags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:spacing="12dp"
        android:layout_margin="12dp"
        android:background="@color/mine_background"/>

</LinearLayout>