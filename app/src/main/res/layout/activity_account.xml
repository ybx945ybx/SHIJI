<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/main_background"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/add_address"
            android:layout_width="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:visibility="gone"
            android:background="@drawable/layout_selector"
            android:layout_height="44dp">

            <TextView
                android:layout_width="wrap_content"
                android:text="收货地址"
                android:layout_centerVertical="true"
                android:textSize="14sp"
                android:textColor="#212121"
                android:drawablePadding="12dp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/add_arrow"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:src="@mipmap/gerenzhongxinjiantou"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="选择收货地址"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:textColor="#9b9b9b"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_toLeftOf="@id/add_arrow"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/address_layout"
            android:layout_width="match_parent"
            android:paddingLeft="16dp"
            android:paddingTop="12dp"
            android:background="@drawable/layout_selector"
            android:paddingBottom="12dp"
            android:paddingRight="16dp"
            android:visibility="visible"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/account_name"
                android:textSize="14sp"
                android:textColor="#212121"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="阿猫阿狗"/>

            <TextView
                android:textSize="12sp"
                android:textColor="#212121"
                android:id="@+id/account_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="123555555555"/>

            <TextView
                android:id="@+id/account_orderno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/account_name"
                android:textSize="12sp"
                android:textColor="#212121"
                android:layout_marginTop="10dp"
                android:text="54654698451984351"/>

            <TextView
                android:id="@+id/account_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#9b9b9b"
                android:textSize="12sp"
                android:layout_below="@id/account_orderno"
                android:text="上海上海市"/>

            <TextView
                android:id="@+id/account_adress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/account_city"
                android:textColor="#9b9b9b"
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                android:text="xxx号xxx路xxx楼xxx房"/>

            <ImageView
                android:id="@+id/selected_arrow"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:src="@mipmap/gerenzhongxinjiantou"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/international_layout"
            android:layout_width="fill_parent"
            android:layout_marginTop="10dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="16dp"
            android:background="@drawable/layout_selector"
            android:visibility="gone"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:src="@mipmap/plane"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_centerVertical="true"
                android:text="国际运费"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/small_arrow"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="￥30"
                android:layout_centerVertical="true"
                android:layout_marginRight="28dp"
                android:layout_alignParentRight="true"
                android:id="@+id/international_fee"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

</LinearLayout>