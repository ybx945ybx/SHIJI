<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:fitsSystemWindows="true">
    <RelativeLayout
        android:id="@+id/guid_title"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingBottom="12dp">
        <ImageView
            android:id="@+id/title_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingLeft="16dp"
            android:paddingRight="35dp"
            android:src="@mipmap/back_image"/>
        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:text="1/2"
            android:textColor="@color/guid_text"
            android:textSize="28sp"/>
        <TextView
            android:id="@+id/title_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:paddingLeft="35dp"
            android:paddingRight="16dp"
            android:text="跳过"
            android:textColor="@color/guid_step_over_text"
            android:textSize="16sp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/guid_title">
        <LinearLayout
            android:id="@+id/lly_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="14dp"
            android:paddingTop="6dp"
            android:visibility="visible">
            <TextView
                android:id="@+id/guide_selected_number_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="已经添加1个品牌"
                android:textColor="@color/guid_text"
                android:textSize="17sp"/>
            <TextView
                android:id="@+id/guide_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="我们会根据您的选择定制个性化推送"
                android:textSize="11sp"/>
        </LinearLayout>
        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_below="@+id/lly_tips"
            android:background="@color/guid_line"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/guid_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view">
        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/lly_guid_next"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:background="#ff6666">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">
            <TextView
                android:id="@+id/guide_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="下一步"
                android:textColor="#ffffff"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/guide_selected_number_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingTop="10dp"
                android:text="(已经选定6个)"
                android:textColor="#ffffff"
                android:textSize="10sp"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
