<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mine_item_bg"
    android:padding="12dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <cn.yiya.shiji.widgets.CircleImageView
            android:id="@+id/list_item_tag_avatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginRight="12dp"
            android:scaleType="centerCrop"
            android:src="@drawable/user_dafault" />

            <TextView
                android:id="@+id/list_item_tag_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#606060"
                android:text=""/>

            <TextView
                android:id="@+id/list_item_tag_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#606060"
                android:gravity="right"
                android:text=""/>
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/list_item_tag_image0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:visibility="invisible"
            android:src="@drawable/user_dafault" />
        <ImageView
            android:id="@+id/list_item_tag_image1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:visibility="invisible"
            android:src="@drawable/user_dafault" />
        <ImageView
            android:id="@+id/list_item_tag_image2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:visibility="invisible"
            android:src="@drawable/user_dafault" />
        <ImageView
            android:id="@+id/list_item_tag_image3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:visibility="invisible"
            android:src="@drawable/user_dafault" />
        <ImageView
            android:id="@+id/list_item_tag_image4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:visibility="invisible"
            android:src="@drawable/user_dafault" />
    </LinearLayout>

</LinearLayout>