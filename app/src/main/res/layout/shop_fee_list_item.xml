<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingTop="6dp"
    android:paddingBottom="6dp"
    android:descendantFocusability="blocksDescendants"
    android:paddingRight="10dp"
    android:background="@drawable/shop_fee_bg_selector"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/shop_fee_checkbox"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:button="@null"
        android:checked="false"
        android:clickable="false"
        android:text="包税渠道"
        android:padding="5dp"
        android:textSize="14sp"
        android:textColor="#636363"
        android:drawablePadding="10dp"
        android:drawableTop="@drawable/check_box_style"
        android:gravity="center"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/shop_fee_tips"
        android:text="预缴关税，快，低价商品首选"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignTop="@id/shop_fee_checkbox"
        android:textSize="11sp"
        android:maxLines="2"
        android:textColor="#585858"
        android:layout_toRightOf="@id/shop_fee_checkbox"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/shop_weight_desc"
        android:layout_width="wrap_content"
        android:text="40元/首500g，5元/续100g"
        android:textSize="9sp"
        android:layout_below="@id/shop_fee_tips"
        android:textColor="#a9a9a9"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/shop_fee_checkbox"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_toRightOf="@id/shop_fee_checkbox"
        android:layout_below="@id/shop_weight_desc"
        android:layout_marginTop="10dp"
        android:paddingBottom="12dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="12dp"
        android:clickable="false"
        android:duplicateParentState="true"
        android:focusable="true"
        android:layout_width="match_parent"
        android:background="@drawable/shop_fee_tax_selector"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/shop_fee_txt"
            android:text="运费"
            android:textColor="#636363"
            android:textSize="11sp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/shop_fee_money"
            android:layout_toRightOf="@id/shop_fee_txt"
            android:text="￥15"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:textColor="#3c3c3c"
            android:layout_centerVertical="true"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/shop_fee_tax_tips"
            android:text="关税全额补贴"
            android:textColor="#ffffff"
            android:background="@color/text_red"
            android:textSize="9sp"
            android:layout_alignParentRight="true"
            android:paddingLeft="5dp"
            android:paddingTop="3dp"
            android:paddingRight="5dp"
            android:paddingBottom="3dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/shop_fee_tax_money"
            android:text="166"
            android:textColor="#3c3c3c"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/shop_fee_tax_tips"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/shop_fee_tax_money_tips"
            android:text="￥"
            android:textColor="#3c3c3c"
            android:textSize="10sp"
            android:textStyle="bold"
            android:layout_toLeftOf="@id/shop_fee_tax_money"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/shop_fee_tax_type"
            android:text="应征关税"
            android:textColor="#636363"
            android:textSize="11sp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/shop_fee_tax_money_tips"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</RelativeLayout>