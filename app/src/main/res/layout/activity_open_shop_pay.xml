<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/mine_background">
    <include layout="@layout/mine_title_layout_white_bg_right_text"
        android:id="@+id/title_layout"/>
    <RelativeLayout
        android:id="@+id/rlyt_need_pay"
        android:layout_below="@+id/title_layout"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/mine_white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="需支付"
            android:textSize="11sp"
            android:textColor="@color/person_center_black"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_need_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 200.00"
            android:textSize="22sp"
            android:textColor="@color/person_center_black"
            android:layout_marginRight="16dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textStyle="bold"/>
        <TextView
            android:layout_toLeftOf="@+id/tv_need_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥"
            android:textSize="10sp"
            android:textColor="@color/person_center_black"
            android:layout_alignBottom="@+id/tv_need_pay"
            android:paddingBottom="3dp"
            android:textStyle="bold"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/rlyt_need_pay"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mine_white">
        <RelativeLayout
            android:id="@+id/rlyt_zhifubao"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:drawableLeft="@mipmap/zhifubaoicon"
                android:drawablePadding="16dp"
                android:gravity="center"
                android:text="支付宝"
                android:textColor="@color/person_center_black"
                android:textSize="13sp"
                android:textStyle="bold" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="69dp"
                android:background="@color/person_center_dividing"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rlyt_weixin"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/rlyt_zhifubao">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:drawableLeft="@mipmap/weixinicon"
                android:drawablePadding="16dp"
                android:gravity="center"
                android:text="微信支付"
                android:textColor="@color/person_center_black"
                android:textSize="13sp"
                android:textStyle="bold" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="69dp"
                android:background="@color/person_center_dividing"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rlyt_zhaoshang"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/rlyt_weixin">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:drawableLeft="@mipmap/zhaoshangicon"
                android:drawablePadding="16dp"
                android:gravity="center"
                android:text="招商银行支付"
                android:textColor="@color/person_center_black"
                android:textSize="13sp"
                android:textStyle="bold" />
        </RelativeLayout>
        <RadioGroup
            android:layout_width="35dp"
            android:layout_height="180dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="6dp">
            <RadioButton
                android:id="@+id/rb_zhifubao"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@drawable/check_box_big_style"/>
            <RadioButton
                android:id="@+id/rb_weixin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@drawable/check_box_big_style"/>
            <RadioButton
                android:id="@+id/rb_zhaoshang"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@drawable/check_box_big_style"/>
        </RadioGroup>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_commit_pay"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="确定支付"
        android:textSize="14sp"
        android:background="@color/person_center_black"
        android:textColor="@color/mine_white"/>
</RelativeLayout>
