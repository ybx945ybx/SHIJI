<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/new_white_color"
        android:paddingBottom="12dp"
        android:paddingLeft="10dp"
        android:paddingRight="12dp"
        android:paddingTop="12dp">

        <com.duowan.mobile.netroid.image.NetworkImageView
            android:id="@+id/iv_goods_image"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_goods_image"
            android:layout_alignTop="@+id/iv_goods_image"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/rl_button"
            android:layout_toRightOf="@+id/iv_goods_image"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_goods_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="商品名称"
                android:textColor="#101010"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_goods_brand"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="品牌"
                android:textColor="#101010"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_goods_price"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="¥100"
                android:textColor="#101010"
                android:textSize="14sp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_goods_image"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/iv_goods_image"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_find_similar"
                android:layout_width="83dp"
                android:layout_height="32dp"
                android:layout_alignParentTop="true"
                android:background="@drawable/bg_black_stroke_white_solid"
                android:text="找相似"
                android:textColor="@color/new_black_color"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_shopping"
                android:layout_width="83dp"
                android:layout_height="32dp"
                android:layout_alignParentBottom="true"
                android:background="@color/new_black_color"
                android:text="去购买"
                android:textColor="@color/new_white_color"
                android:textSize="12sp" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/new_gray_color" />
</LinearLayout>
