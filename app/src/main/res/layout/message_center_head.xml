<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/mine_white">
    <RelativeLayout
        android:id="@+id/msg_community"
        android:layout_width="match_parent"
        android:background="@drawable/layout_selector"
        android:layout_height="54dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="社区消息"
            android:gravity="center"
            android:textColor="@color/person_center_black"
            android:textStyle="bold"
            android:textSize="13sp" />
        <ImageView
            android:id="@+id/iv_more_community"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="22dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/qianwang" />
        <ImageView
            android:id="@+id/iv_community_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="22dp"
            android:layout_centerVertical="true"
            android:src="@drawable/message_dot"
            android:visibility="gone"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_height="1px"
        android:background="@color/person_center_dividing"/>
    <RelativeLayout
        android:id="@+id/msg_service"
        android:layout_width="match_parent"
        android:background="@drawable/layout_selector"
        android:layout_height="54dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="客服消息"
            android:gravity="center"
            android:textColor="@color/person_center_black"
            android:textStyle="bold"
            android:textSize="13sp" />
        <ImageView
            android:id="@+id/iv_more_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="22dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/qianwang" />
        <ImageView
            android:id="@+id/iv_service_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="22dp"
            android:layout_centerVertical="true"
            android:src="@drawable/message_dot"
            android:visibility="gone"/>
    </RelativeLayout>
</LinearLayout>
