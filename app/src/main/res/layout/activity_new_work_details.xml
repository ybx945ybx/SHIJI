<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <!--toolbar标题栏-->
    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:layout_scrollFlags="scroll|enterAlways"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <include layout="@layout/toolbar_layout_white" />

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>


    <!--中间滚动部分-->
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srl_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="49dp"
        android:layout_marginTop="?attr/actionBarSize"
        android:orientation="vertical">

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/sv_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ll_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="invisible">
                <!--第一部分-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/new_white_color">

                    <LinearLayout
                        android:id="@+id/ll_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="13dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="38dp"
                            android:layout_height="37dp">

                            <com.facebook.drawee.view.SimpleDraweeView
                                android:id="@+id/iv_user_avatar"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                fresco:actualImageScaleType="centerInside"
                                fresco:placeholderImage="@mipmap/user_icon_default"
                                fresco:roundAsCircle="true" />

                            <ImageView
                                android:id="@+id/iv_red_people"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentRight="true"
                                android:src="@mipmap/v_shouye_tuijian"
                                android:visibility="gone" />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/tv_user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_marginLeft="10dp"
                            android:text=""
                            android:textColor="@color/new_black_color"
                            android:textSize="13sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <cn.yiya.shiji.views.FloatingActionButton
                        android:id="@+id/btn_follow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        app:v_styleId="@array/fab_wave" />

                    <ImageView
                        android:id="@+id/iv_delete"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16dp"
                        android:padding="3dp"
                        android:src="@mipmap/icon_delete"
                        android:visibility="gone" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="343dp"
                    android:background="@color/new_white_color">

                    <cn.yiya.shiji.views.TagAbleImageView
                        android:id="@+id/iv_tag_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="17dp"
                        android:layout_marginRight="16dp"
                        android:src="@drawable/user_dafault" />

                    <LinearLayout
                        android:id="@+id/ll_tag"
                        android:layout_width="215dp"
                        android:layout_height="34dp"
                        android:layout_alignBottom="@id/iv_tag_image"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/rectangle_bg_tag"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/shaidangouwuche" />

                        <View
                            android:layout_width="2dp"
                            android:layout_height="12dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            android:background="@color/new_black_color" />

                        <cn.yiya.shiji.views.MarqueeTextView
                            android:id="@+id/tv_tag_brand"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="marquee"
                            android:gravity="center"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@color/new_black_color"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llyt_tips"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="58dp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/guide_tips_travel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/guide_tips"
                            android:elevation="6dp"
                            android:gravity="center"
                            android:paddingBottom="12dp"
                            android:paddingLeft="18dp"
                            android:paddingRight="18dp"
                            android:paddingTop="12dp"
                            android:text="喜欢就点我购买吧~"
                            android:textColor="#ffffff"
                            android:textSize="13sp" />

                        <ImageView
                            android:id="@+id/guide_arrow_travel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:elevation="6dp"
                            android:src="@mipmap/guide_tips_down" />
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_like_user_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/new_white_color"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="15dp"
                    android:paddingTop="14dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_like_sum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:text="0"
                        android:textColor="@color/new_black_color"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="赞"
                        android:textColor="@color/new_black_color"
                        android:textSize="12sp" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_like_user"
                        android:layout_width="0dp"
                        android:layout_height="28dp"
                        android:layout_marginLeft="12dp"
                        android:layout_weight="1"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:scrollbars="none" />

                    <RelativeLayout
                        android:id="@+id/rl_likers_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/iv_likers_arrow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="30dp"
                            android:src="@mipmap/arrow_right" />
                    </RelativeLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/new_gray_color" />
                <!--第二部分-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/new_white_color"
                    android:paddingBottom="16dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="16dp">

                    <TextView
                        android:id="@+id/tv_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="18dp"
                        android:text=""
                        android:textColor="@color/new_black_color"
                        android:textSize="14sp"
                        android:visibility="gone" />

                    <com.zhy.view.flowlayout.TagFlowLayout
                        android:id="@+id/tfl_link_tag"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_content"
                        android:visibility="gone"
                        app:max_select="1" />

                    <RelativeLayout
                        android:id="@+id/rl_content_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tfl_link_tag">

                        <View
                            android:id="@+id/view_line_date"
                            android:layout_width="11dp"
                            android:layout_height="2dp"
                            android:layout_centerVertical="true"
                            android:background="@color/new_black_color" />

                        <TextView
                            android:id="@+id/tv_content_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="14dp"
                            android:layout_toRightOf="@id/view_line_date"
                            android:text=""
                            android:textColor="@color/new_black_color"
                            android:textSize="12sp" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/rl_goods"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rl_content_date"
                        android:layout_marginTop="18dp"
                        android:background="@color/new_gray_color"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/iv_goods_image"
                            android:layout_width="41dp"
                            android:layout_height="41dp"
                            android:background="@drawable/rectangle_image_work_details"
                            android:paddingLeft="2dp"
                            android:paddingRight="2dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/user_dafault" />

                        <TextView
                            android:id="@+id/tv_goods_brand"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="8dp"
                            android:layout_toLeftOf="@+id/tv_goods_price"
                            android:layout_toRightOf="@id/iv_goods_image"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@color/new_black_color"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_goods_site"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_below="@id/tv_goods_brand"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@id/iv_goods_image"
                            android:background="@drawable/rectangle_bg_work_details"
                            android:ellipsize="end"
                            android:paddingBottom="3dp"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp"
                            android:paddingTop="3dp"
                            android:lines="1"
                            android:text=""
                            android:textColor="@color/new_black_color"
                            android:textSize="9sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_goods_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:text=""
                            android:textColor="@color/new_black_color"
                            android:textSize="11sp"
                            android:textStyle="bold" />

                    </RelativeLayout>
                </RelativeLayout>

                <View
                    android:id="@+id/viewline"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/new_gray_color" />
                <!--第三部分-->
                <cn.yiya.shiji.views.AllListView
                    android:id="@+id/lv_comments_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@color/new_gray_color"
                    android:dividerHeight="1px"
                    android:scrollbars="none" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/new_gray_color" />
            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

    </android.support.v4.widget.SwipeRefreshLayout>


    <!--底部-->
    <include layout="@layout/layout_footer_work_details" />
</RelativeLayout>
