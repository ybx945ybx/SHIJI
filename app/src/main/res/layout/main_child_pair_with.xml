<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/new_gray_color" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#ffffff"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:src="@mipmap/icon_main_dapei" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/main_pair_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:paddingBottom="20dp" />

    <RelativeLayout
        android:id="@+id/ll_footer_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="center_horizontal"
        android:paddingBottom="19dp"
        android:paddingTop="2dp">

        <RelativeLayout
            android:id="@+id/rl_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/xiala" />

            <ProgressBar
                android:id="@+id/progressbar_more"
                style="@android:style/Widget.ProgressBar"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_centerInParent="true"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@id/rl_more"
            android:gravity="center"
            android:text="查看更多"
            android:textColor="#212121"
            android:textSize="14sp" />
    </RelativeLayout>
</LinearLayout>