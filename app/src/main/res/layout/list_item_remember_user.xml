<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@color/mine_white"
    android:orientation="vertical"
    android:paddingBottom="18dp"
    android:paddingTop="17dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="21dp">

        <LinearLayout
            android:id="@+id/llyt_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <RelativeLayout
                android:layout_width="38dp"
                android:layout_height="37dp">

                <cn.yiya.shiji.views.RoundedImageView
                    android:id="@+id/list_item_remember_user_avatar"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/user_icon_default"
                    app:riv_oval="true" />
                <ImageView
                    android:id="@+id/iv_red_people"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/v_shouye_tuijian"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:visibility="gone"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/list_item_remember_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="30dp"
                android:text="Hathsg"
                android:textColor="@color/discover_friend_name"
                android:textSize="14sp" />
        </LinearLayout>

        <cn.yiya.shiji.views.FloatingActionButton
            android:id="@+id/list_item_remember_user_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingBottom="15dp"
            android:paddingLeft="40dp"
            android:paddingTop="15dp"
            app:v_styleId="@array/fab_wave" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <ImageView
            android:id="@+id/list_item_remember_user_image0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/user_dafault" />

        <ImageView
            android:id="@+id/list_item_remember_user_image1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/user_dafault" />

        <ImageView
            android:id="@+id/list_item_remember_user_image2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/user_dafault" />
    </LinearLayout>
</LinearLayout>