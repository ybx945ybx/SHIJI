<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="10dp"
    android:background="@color/mine_background">
    <RelativeLayout
        android:id="@+id/rlty_root"
        android:layout_width="wrap_content"
        android:layout_height="114dp"
        android:background="@drawable/layout_selector_red">
            <LinearLayout
                android:id="@+id/rlty_handsel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="27dp">
                <TextView
                    android:id="@+id/rmb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥"
                    android:textColor="@color/text_red"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/handsel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50"
                    android:textColor="@color/text_red"
                    android:textSize="29sp"/>

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="27dp"
                android:layout_marginLeft="80dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp">
                <!--<TextView-->
                    <!--android:id="@+id/package_source"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="1111"-->
                    <!--android:textColor="#797979"-->
                    <!--android:textSize="17sp"/>-->
                <TextView
                    android:id="@+id/package_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="#212121"
                    android:text="满100元可用"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/package_apply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/package_des"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="37dp"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:textColor="#898989"
                    android:textSize="11sp"
                    android:text="我ishi一i我ishi一i我ishi一i我ishi一i我ishi一i我ishi一i我ishi一i我ishi一i我ishi一i我ishi一i我ishi一i我ishi一i我ishi一i我ishi一i我ishi一i我ishi一i"/>
                <View
                    android:layout_width="10dp"
                    android:layout_height="2dp"
                    android:background="#000000"
                    android:layout_above="@+id/time_limit"
                    android:layout_marginBottom="2dp"
                    android:layout_alignParentRight="true"/>
                <TextView
                    android:id="@+id/time_limit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:text="有效期至：2015-09-14"
                    android:textColor="#898989"
                    android:textSize="10sp"/>
            </RelativeLayout>
            <!--<ImageView-->
                <!--android:id="@+id/red_selected"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:src="@drawable/promo_button_selector"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_marginTop="17dp"-->
                <!--android:layout_marginRight="10dp"-->
                <!--android:layout_height="wrap_content"/>-->
        </RelativeLayout>
