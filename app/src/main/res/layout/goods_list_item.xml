<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="7dp"
    android:layout_marginTop="2dp"
    android:padding="1px"
    android:background="@drawable/goods_list_item_bg"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rlyt_goods"
        android:visibility="visible">
    <LinearLayout
        android:id="@+id/llyt_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/mine_white">
        <com.duowan.mobile.netroid.image.NetworkImageView
            android:id="@+id/item_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/user_dafault"/>
        <TextView
            android:id="@+id/item_brand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="9dp"
            android:text=""
            android:textColor="@color/home_detail_black_txt"
            android:textSize="11sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text=""
            android:textColor="@color/home_detail_black_txt"
            android:textSize="11sp"/>

        <View
            android:layout_width="15dp"
            android:layout_height="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="#1e1e1e"/>
        <LinearLayout
            android:id="@+id/goods_price_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/item_now_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥14700"
                android:textColor="@color/app_base_red"
                android:textSize="17sp"/>
            <TextView
                android:id="@+id/item_orginal_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="￥6789"
                android:textColor="#bbbbbb"
                android:textSize="12sp"
                android:visibility="gone"/>
        </LinearLayout>
        <TextView
            android:id="@+id/goods_from_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:text=""
            android:textColor="#9b9b9b"
            android:textSize="10sp"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:layout_below="@+id/llyt_item"
        android:background="@color/mine_white"
        android:id="@+id/viewline"/>
    <RelativeLayout
        android:id="@+id/rlyt_recommend"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/viewline"
        android:visibility="gone">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/mine_background"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_for_seller"
                android:textColor="#414340"
                android:textSize="11sp"
                android:text="佣金：￥147"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:id="@+id/tv_for_seller_per"
                android:textColor="#414340"
                android:textSize="11sp"
                android:text="佣金比例：￥10%"/>

        </LinearLayout>
        <ImageView
            android:id="@+id/iv_recommend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/mall_goods_recommend_selector"
            android:layout_centerVertical="true"/>

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/discount_layout"
        android:layout_width="26dp"
        android:orientation="vertical"
        android:layout_marginRight="7dp"
        android:layout_alignParentRight="true"
        android:background="@mipmap/dazhe"
        android:layout_height="37dp">

        <TextView
            android:id="@+id/discount_tv"
            android:layout_width="wrap_content"
            android:textColor="#ffffff"
            android:text=""
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:textSize="10sp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:textColor="#ffffff"
            android:text="折"
            android:layout_gravity="center"
            android:textSize="8sp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/shop_image_sold_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:scaleType="centerInside"
        android:src="@mipmap/soldout"
        android:visibility="invisible"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rlyt_topic"
        android:visibility="gone">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_topic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/iv_jianbian"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/jianbian"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="精选专题"
            android:textSize="10sp"
            android:background="#f6bd23"
            android:textColor="#ffffff"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="11dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"/>
        <TextView
            android:id="@+id/tv_topic_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text=""
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingBottom="13dp"/>

    </RelativeLayout>
</RelativeLayout>