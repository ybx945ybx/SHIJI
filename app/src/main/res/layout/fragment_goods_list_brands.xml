<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/mine_white">
    <RelativeLayout
        android:id="@+id/rlyt_search"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="15dp"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <AutoCompleteTextView
            android:id="@+id/brand_search"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:background="@drawable/brand_search_auto_textview_bg"
            android:completionThreshold="1"
            android:hint="搜索品牌"
            android:imeOptions="actionNext"
            android:paddingLeft="13dp"
            android:singleLine="true"
            android:textColorHint="#9b9b9b"
            android:popupBackground="@color/mine_white"
            android:dropDownVerticalOffset="5dp"
            android:textSize="12sp"
            android:textColor="#333333"
            android:scrollbars="none"/>
        <ImageView
            android:id="@+id/iv_cancle"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/sousuoguanbi"
            android:padding="13dp"/>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rycv_letter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp">

    </android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:id="@+id/rlyt_selected_brands"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:visibility="gone">
        <TextView
            android:id="@+id/tv_selected_brands"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:text="已选品牌"
            android:textSize="11sp"
            android:background="@color/mine_background"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"/>
        <ScrollView
            android:id="@+id/scroll_selected_brands"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_selected_brands"
            android:scrollbars="none">
            <com.zhy.view.flowlayout.TagFlowLayout
                android:id="@+id/tflyt_selected_brands"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:paddingBottom="8dp">
            </com.zhy.view.flowlayout.TagFlowLayout>
        </ScrollView>
        <RelativeLayout
            android:id="@+id/rlyt_more_brands"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_alignParentBottom="true"
            android:background="@color/mine_white"
            android:visibility="visible">
            <ImageView
                android:id="@+id/iv_selected_brands_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/xiala"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:paddingBottom="12dp"
                android:visibility="gone"/>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_selected_letter"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:text="#"
            android:textSize="11sp"
            android:background="@color/mine_background"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rycv_letter_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>
</LinearLayout>
