<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:su="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="@color/white">
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:background="@null"
            android:id="@+id/btn_cancel"/>
        <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确定"
            android:background="@null"
         	android:layout_alignParentRight="true"
            android:id="@+id/btn_save"/>
    </RelativeLayout>
    <cn.yiya.shiji.widgets.ScrollerPicker
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollerPicker"
        su:itemNumber="3"
        su:lineColor="@color/black"
        su:maskHight="32dp"
        su:noEmpty="true"
        su:normalTextColor="#777"
        su:normalTextSize="14sp"
        su:selecredTextColor="#ff000000"
        su:selecredTextSize="20sp"
        su:unitHight="50dp"/>
