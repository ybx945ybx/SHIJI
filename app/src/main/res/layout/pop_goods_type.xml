<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="#ffffff"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:background="#eaeaea"
        android:layout_height="1px"
        android:layout_above="@+id/recycler_mall_type"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_mall_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:layout_width="match_parent"
        android:background="#eaeaea"
        android:layout_height="1px"
        android:layout_below="@+id/recycler_mall_type"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/llyt_tips"
        android:layout_marginTop="75dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/guide_tips_up"
            android:id="@+id/guide_arrow"
            android:elevation="6dp"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/guide_tips"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingRight="18dp"
            android:paddingLeft="18dp"
            android:text="可以同时多选你喜欢的品牌~"
            android:textColor="#ffffff"
            android:textSize="13sp"
            android:gravity="center"
            android:id="@+id/guide_tips"
            android:elevation="6dp"/>
    </LinearLayout>

</RelativeLayout>