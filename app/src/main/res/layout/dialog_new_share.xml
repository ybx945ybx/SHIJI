<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingTop="21dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="分享到"
        android:textColor="@color/new_black_color"
        android:textSize="14sp"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="24dp">
        <TextView
            android:id="@+id/tv_wx_zone"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="朋友圈"
            android:drawablePadding="6dp"
            android:gravity="center_horizontal"
            android:drawableTop="@mipmap/pengyouquan"
            android:clickable="true"/>
        <TextView
            android:id="@+id/tv_wx"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="微信"
            android:drawablePadding="6dp"
            android:drawableTop="@mipmap/weixin"
            android:clickable="true"/>
        <TextView
            android:id="@+id/tv_weibo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="新浪微博"
            android:drawablePadding="6dp"
            android:gravity="center_horizontal"
            android:drawableTop="@mipmap/xinlangweibo"
            android:clickable="true"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/new_gray_color"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/new_black_color"
        android:textSize="14sp"
        android:paddingTop="18dp"
        android:paddingBottom="16dp"
        android:clickable="true"
        android:textStyle="bold"/>

</LinearLayout>