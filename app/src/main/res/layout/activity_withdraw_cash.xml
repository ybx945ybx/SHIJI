<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mine_white"
    android:id="@+id/layout_root"
    android:orientation="vertical">
    <include layout="@layout/mine_title_layout_white_bg_right_text"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/mine_background"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="可提现金额"
            android:textColor="@color/person_center_black"
            android:textSize="12sp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"/>
        <TextView
            android:id="@+id/tv_can_cash_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="300.00"
            android:textColor="@color/app_base_red"
            android:textSize="12sp"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元"
            android:textColor="@color/person_center_black"
            android:textSize="12sp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/mine_background"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="提现金额"
        android:textSize="14sp"
        android:textColor="#6d6d6d"
        android:paddingLeft="16dp"
        android:gravity="center_vertical"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/mine_background"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="74dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textColor="@color/discover_friend_name"
                android:text="￥"
                android:layout_marginLeft="16dp"
                android:paddingBottom="5dp"
                android:layout_gravity="center_vertical"/>
            <EditText
                android:id="@+id/et_cash_sum"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_marginLeft="9dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:background="@null"
                android:textColor="@color/discover_friend_name"
                android:inputType="numberSigned"
                android:textSize="32sp"
                android:text=""/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/app_base_red"
            android:layout_alignParentBottom="true"
            android:text="dddddd"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="6dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/mine_background"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="63dp">
        <TextView
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#8e8e8e"
            android:text="支付宝姓名"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="30dp"/>
        <EditText
            android:id="@+id/et_zhifubao_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:background="@null"
            android:textColor="@color/discover_friend_name"
            android:textSize="16sp"
            android:text=""
            android:layout_marginTop="30dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/mine_background"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="63dp">
        <TextView
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#8e8e8e"
            android:text="支付宝账号"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="30dp"/>
        <EditText
            android:id="@+id/et_zhifubao_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:background="@null"
            android:textColor="@color/discover_friend_name"
            android:textSize="16sp"
            android:text=""
            android:layout_marginTop="30dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/mine_background"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="63dp">
        <TextView
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#8e8e8e"
            android:text="手机号"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="30dp"/>
        <EditText
            android:id="@+id/et_telephone_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:background="@null"
            android:textColor="@color/discover_friend_name"
            android:inputType="numberSigned"
            android:maxLength="11"
            android:textSize="16sp"
            android:text=""
            android:layout_marginTop="30dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/mine_background"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="54dp">
        <TextView
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#8e8e8e"
            android:text="验证码"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"/>
        <EditText
            android:id="@+id/et_code_num"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="113dp"
            android:background="@null"
            android:textColor="@color/discover_friend_name"
            android:maxLength="6"
            android:textSize="16sp"
            android:text=""
            android:layout_marginTop="16dp"/>
        <TextView
            android:id="@+id/tv_code"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:background="@drawable/download_selector"
            android:text="发送验证码"
            android:textColor="#6d6d6d"
            android:gravity="center"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/mine_background"/>
    <TextView
        android:id="@+id/tv_commit"
        style="@style/commit_withdraw_bg_style"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="29dp"
        android:text="确认提现"
        android:gravity="center"
        android:enabled="false"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mine_background"
        android:layout_marginTop="40dp"/>
</LinearLayout>
