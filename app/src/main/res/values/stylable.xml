        <!-- Background color -->
        <attr name="bg_color" format="color|reference"/>
        <attr name="bg_color_pressed" format="color|reference"/>
    </declare-styleable>

    <declare-styleable name="HorizontalPicker">
        <attr name="android:textColor" />
        <attr name="android:textSize" />
